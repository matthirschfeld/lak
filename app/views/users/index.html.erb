<h1>Listing users</h1>

<table>
  <tr>
    <th>Nick</th>
    <th>Email</th>
    <th>User link</th>
    <th>Alliance</th>
    <th>Alliance link</th>
    <th>Alliance status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.nick %></td>
    <td><%= user.email %></td>
    <td><%= user.user_link %></td>
    <td><%= user.alliance %></td>
    <td><%= user.alliance_link %></td>
    <td><%= user.alliance_status %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

